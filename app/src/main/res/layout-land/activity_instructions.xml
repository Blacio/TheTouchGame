<?xml version="1.0" encoding="utf-8"?>

    <ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/instruct_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    tools:context="com.dummies.touchgame.InstructionsActivity"
        android:background="@mipmap/back2">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@mipmap/gameplay"
            android:layout_weight="3"
            android:padding="@dimen/inst_padding"/>

        <TextView
            android:text="This game consist in touching the button at the right moment, in the right way, based on certain criteria !!! You have to solve the specific task of every level."
            android:fontFamily="serif-monospace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="@dimen/inst_text_size"
            android:padding="@dimen/inst_padding"
            android:layout_weight="3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="4">

            <TextView
                android:text=" Turn the page for more details !"
                android:fontFamily="serif-monospace"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="@dimen/inst_text_size"

                android:layout_marginBottom="48dp"
                android:padding="@dimen/inst_padding"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/inst1"
                android:padding="@dimen/inst_padding"
                android:layout_gravity="center" />

        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="20"
            android:src="@mipmap/actions"
            android:padding="@dimen/inst_padding"/>

        <TextView
            android:text="The task that you will have to solve are based on different gestures that
you will do on the buttons at a specific time:\n\n PRESS\nRELEASE\nCLICK\nDOUBLE_CLICK"
            android:fontFamily="serif-monospace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:gravity="center"
            android:textStyle="normal|bold"
            android:textSize="@dimen/inst_text_size"
            android:padding="@dimen/inst_padding"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@mipmap/col"
            android:layout_weight="3"
            android:padding="@dimen/inst_padding"/>

        <TextView
            android:text="One of the criteria of touching a button is its color.\n The color that
you can see are RED, GREEN, BLUE and YELLOW."
            android:fontFamily="serif-monospace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="@dimen/inst_text_size2"
            android:padding="@dimen/inst_padding"
            android:layout_weight="3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_weight="4">

            <TextView
                android:text= "Be careful ! Sometimes, some colors can appear several times per turn. It is possible that you will need to do different actions each time the color pops up !!! "
                android:fontFamily="serif-monospace"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="@dimen/inst_text_size2"
                android:padding="@dimen/inst_padding"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/instcolor"
                android:padding="@dimen/inst_padding"
                android:layout_gravity="center" />

        </LinearLayout>


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@mipmap/time"
            android:layout_weight="3"
            android:padding="@dimen/inst_padding"/>

        <TextView
            android:text="The time will also be very important in order to complete the levels.
    All colors will be visible a certain period of time."
            android:fontFamily="serif-monospace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="@dimen/inst_text_size2"
            android:padding="@dimen/inst_padding"
            android:layout_weight="3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_weight="4">

            <TextView
                android:text="Sometimes you will have to do special gestures after a specific period of time that is mentioned in the task !"
                android:fontFamily="serif-monospace"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="@dimen/inst_text_size2"
                android:padding="@dimen/inst_padding"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/instclock"
                android:padding="@dimen/inst_padding"
                android:layout_gravity="center" />

        </LinearLayout>


    </LinearLayout>

    </ViewFlipper>

