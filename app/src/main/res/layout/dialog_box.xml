<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@mipmap/box">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_padding_button"
        android:src="@mipmap/ic_launcher" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#99FFFFFF"
        android:layout_marginLeft="@dimen/dialog_padding_line"
        android:layout_marginRight="@dimen/dialog_padding_line"/>

    <TextView
        android:text="@string/menu_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/dialog_text"
        android:textSize="@dimen/dialog_text_size"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#ffffff"
        android:padding="@dimen/dialog_padding_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#99FFFFFF"
        android:layout_marginLeft="@dimen/dialog_padding_line"
        android:layout_marginRight="@dimen/dialog_padding_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_padding_button"
        android:layout_marginRight="@dimen/dialog_padding_button"
        android:orientation="horizontal"
        android:weightSum="1"
        android:padding="@dimen/dialog_padding_button">

        <Button
            android:text="YES"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:id="@+id/yes"
            android:layout_weight="0.5"
            android:textColor="#ffffff"
            android:background="@drawable/button_green"
            android:textSize="@dimen/dialog_button_size" />

        <Button
            android:text="Cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:id="@+id/no"
            android:textColor="#ffffff"
            android:background="@drawable/button_red"
            android:textSize="@dimen/dialog_button_size" />



    </LinearLayout>

</LinearLayout>
