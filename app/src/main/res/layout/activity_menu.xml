<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dummies.touchgame.MenuActivity"
    android:background="@mipmap/back">

    <Button
        android:id="@+id/continueButton"

        android:text="Continue"
        android:textColor="#FFFEFF"
        android:textSize="@dimen/size_button_menu"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="19"
        android:onClick="onContinue"
        android:layout_below="@+id/newButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignRight="@+id/levelButton"
        android:layout_alignEnd="@+id/levelButton" />

    <Button
        android:id="@+id/levelButton"

        android:text="Levels"
        android:textColor="#FFFEFF"
        android:textSize="@dimen/size_button_menu"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="19"
        android:onClick="onLevels"
        android:layout_below="@+id/continueButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignRight="@+id/instructionButton"
        android:layout_alignEnd="@+id/instructionButton" />

    <Button
        android:id="@+id/instructionButton"

        android:text="Instruction"
        android:textColor="#FFFEFF"
        android:textSize="@dimen/size_button_menu"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="19"
        android:onClick="onInstruction"
        android:layout_below="@+id/levelButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <Button
        android:id="@+id/newButton"

        android:text="New Game"
        android:textColor="#FFFEFF"
        android:textSize="@dimen/size_button_menu"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="19"
        android:onClick="onNew"
        android:textStyle="normal|bold"
        android:fontFamily="casual"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignRight="@+id/continueButton"
        android:layout_alignEnd="@+id/continueButton" />

</RelativeLayout>
